<section>
    <div class="row">
    <h2 class="text-center">Edit Product</h2>
    <div class="col-md-6 m-5 ml-5">
    <form action="/admin/edit_product/{{product._id}}" method="post" enctype="multipart/form-data">
        <div >
            <label for="Name">Name</label>
            <input type="text" name="Name" class="form-control" value="{{product.Name}}">
        </div>
        <div >
            <label for="Category">Category</label>
            <input type="text" name="Category"class="form-control" value="{{product.Category}}">
        </div>
        <div >
            <label for="Price">Price</label>
            <input type="number" name="Price" class="form-control" value="{{product.Price}}">
        </div>
        <div >
            <label for="Description">Description</label>
            <input type="text" name="Description" class="form-control" value="{{product.Description}}">
        </div>
        <div >
            <label for="Image">Image</label>
            <img src="/product_image/{{product._id}}.jpg" alt="" style="width: 100px; height: auto">
            <input type="file" name="Image" class="form-control">
        </div>
        <div>
            <button type="submit" class="btn btn-warning mt-4">Submit</button>
        </div>
    </form>
    </div>
    </div>
</section>