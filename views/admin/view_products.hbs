<section>
    <div class="container">
        <div class="row mt-4">
            <div class="text-md-end"><a href="/admin/add_product" class="btn btn-info">Add Product</a></div>
        </div>
  <table class="table mt-5" id="prodTab">
  <thead>
    <tr>
      {{!-- <th scope="col">No</th> --}}
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      {{!-- <th scope="row">$</th> --}}
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:50px" src="{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit_product/{{this._id}}" class="btn btn-warning">Edit</a>
        <a href="/admin/delete_product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Delete {{this.Name}}')">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#proTab').DataTable();
} );
</script>